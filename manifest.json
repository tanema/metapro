{
  "manifest_version": 2,
  "name": "metapro",
  "description": "",
  "version": "1.0",

  "applications": {
    "gecko": {
      "id": "timanema@gmail.com",
      "strict_min_version": "42.0"
    }
  },

  "permissions": [
    "*://*.ngrok.io/*",
    "*://*.myshopify.com/*",
    "identity",
    "activeTab",
    "webRequest",
    "storage",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.myshopify.com/*"],
      "js": ["build/content_script.js"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["build/background.js"]
  }
}
